{
  "name": "@stockpulse/backend",
  "version": "1.0.0",
  "description": "StockPulse backend API",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "vercel-build": "npm run build && npm run copy-dist-to-api",
    "copy-dist-to-api": "node -e \"const fs=require('fs');const path=require('path');const src=path.join(process.cwd(),'dist');const dest=path.join(process.cwd(),'api','dist');if(!fs.existsSync(src)){console.error('dist folder not found:',src);process.exit(1);}const copy=(s,d)=>{fs.mkdirSync(d,{recursive:true});fs.readdirSync(s).forEach(f=>{const sPath=path.join(s,f);const dPath=path.join(d,f);if(fs.statSync(sPath).isDirectory()){copy(sPath,dPath);}else{fs.copyFileSync(sPath,dPath);}});};copy(src,dest);const target=path.join(dest,'app.module.js');const altTarget=path.join(dest,'src','app.module.js');if(!fs.existsSync(target)){if(fs.existsSync(altTarget)){fs.copyFileSync(altTarget,target);}else{console.error('api/dist/app.module.js missing after copy');process.exit(1);}}console.log('Copied dist to api/dist and verified app.module.js');\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm": "typeorm-ts-node-commonjs -d src/database/data-source.ts",
    "migration:generate": "npm run typeorm migration:generate",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "@nestjs/bullmq": "^10.0.1",
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.2",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "pino": "^8.17.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}

