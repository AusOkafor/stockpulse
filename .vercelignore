# Backend-specific Vercel ignore

# Source files (only dist is needed for serverless)
# NOTE: dist/ and api/dist/ must NOT be ignored - they're needed for serverless function
src/
!src/database/data-source.ts
!src/migrations/

# IMPORTANT: api/dist/ contains the compiled NestJS app - MUST be included
# Do NOT ignore api/dist/ - it's created during vercel-build

# Documentation (not needed in deployment)
*.md
!README.md

# Development files
.env
.env.local
.env.development
.env.test

# Test files
**/*.test.ts
**/*.spec.ts
test/
coverage/

# Development tools
.vscode/
.idea/
*.log

# Prisma (migrations are handled separately)
prisma/
!prisma/migrations/

# Scripts (not needed in serverless)
scripts/

